@model ClaimViewModel

@{
    ViewData["Title"] = "Detalhes da declaração";
    Layout = null;
}

<div>
    <h4>Informação somente leitura</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Tag)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Tag)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Activated)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Activated)
            {
                <span class="badge bg-success">Sim</span>
            }
            else
            {
                <span class="badge bg-danger">Não</span>
            }
        </dd>
    </dl>
</div>

<hr />
<h4>Módulo</h4>

@if (Model.Module != null)
{
    <table class="table table-hover">
        <thead class="thead-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Module.Name)</th>
                <th>@Html.DisplayNameFor(model => model.Module.Description)</th>
                <th>@Html.DisplayNameFor(model => model.Module.Activated)</th>
            </tr>
        </thead>
        <tbody>

                <tr>
                <td>@Html.DisplayFor(model => model.Module.Name)</td>
                <td>@Html.DisplayFor(model => model.Module.Description)</td>
                    <td>
                    @if (Model.Module.Activated)
                        {
                            <span class="badge bg-success">Sim</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Não</span>
                        }
                    </td>
                </tr>          
        </tbody>
    </table>
}
else
{
    <p class="text-danger">Não existe nenhum modulo para esta declaração.</p>
}