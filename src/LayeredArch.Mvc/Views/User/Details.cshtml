@using LayeredArch.Mvc.ViewModels.Entities
@model UserViewModel

@{
    ViewData["Title"] = "Detalhes";
    Layout = null;
}

<div>
    <h4>Informação somente leitura</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ChangedDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ChangedDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CreatedDate)
        </dt>
        <dd class="col-sm-10">
            @Model.CreatedDate.ToString("dd-MM-yyyy")
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Activated)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Activated)
            {
                <span class="badge bg-success">Sim</span>
            }
            else
            {
                <span class="badge bg-danger">Não</span>
            }
        </dd>
    </dl>
</div>

<hr />
<h4>Perfil</h4>

@if (Model.Role != null)
{
    <table class="table table-hover">
        <thead class="thead-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Role.Name)</th>
                <th>@Html.DisplayNameFor(model => model.Role.Description)</th>
                <th>@Html.DisplayNameFor(model => model.Role.Activated)</th>
            </tr>
        </thead>
        <tbody>

            <tr>
                <td>@Html.DisplayFor(model => model.Role.Name)</td>
                <td>@Html.DisplayFor(model => model.Role.Description)</td>
                <td>
                    @if (Model.Role.Activated)
                    {
                        <span class="badge bg-success">Sim</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Não</span>
                    }
                </td>
            </tr>
        </tbody>
    </table>
}
else
{
    <p class="text-danger">Não existe nenhum perfil para este utilizador!</p>
}