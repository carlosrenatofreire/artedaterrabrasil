
@{
    var currentPath = Context.Request.Path.ToString();
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <script>
        //Este script carrega o theme antes da página dar render. Resolve o problema do html piscar quando carrega o tema
        (function() {
            const savedTheme = localStorage.getItem("theme");
            const theme = savedTheme ? savedTheme : "light";
            document.documentElement.setAttribute("data-bs-theme", theme);
        })();
    </script>
    <script type="importmap"></script>

    <!-- Bootstrap + Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    <!-- Font-awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />

    <!-- fonts.googleapis -->
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Fredoka:wght@700&display=swap" rel="stylesheet">

    <!-- SweetAlert2 -->
    <link href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css" rel="stylesheet" />

    <!-- Toastr -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet" />

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <script src="~/js/darkmode.js" defer></script>

</head>
<body>

    <!-- Topbar -->
    <partial name="_Topbar" />

    <!-- Notification panel -->
    <div class="notification-panel" id="notification-panel">
        <div class="notification-header">
            <span><strong>Notificações</strong></span>
            <button id="notification-close" style="background: none; border: none; font-size: 16px; cursor: pointer;">✖</button>
        </div>
        <div class="notification-body" id="notification-body">
        </div>
    </div>

    <div class="d-flex">

        <!-- Sidebar -->
        <div class="sidebar">
            <a asp-controller="Home" asp-action="Index" class="sidebar-item @(currentPath == "/" ? "active" : "")">
                <i class="fa-solid fa-gauge-high"></i> <span>Dashboard</span>
            </a>
            <a asp-controller="User" asp-action="Index" class="sidebar-item @(currentPath.Contains("/User-List") || currentPath.Contains("/Role-List") || currentPath.Contains("/Module-List") || currentPath.Contains("/Claim-List") ? "active" : "")">
                <i class="fas fa-users"></i> <span>Utilizadores</span>
            </a>
            <a asp-controller="Project" asp-action="Index" class="sidebar-item @(currentPath.Contains("/Project-List") || currentPath.Contains("/ProjectType-List") || currentPath.Contains("/Activity-List") || currentPath.Contains("/ActivityType-List") || currentPath.Contains("/ActivityStatus-List") ? "active" : "")">
                <i class="fas fa-diagram-project"></i> <span>Projetos</span>
            </a>
            <a asp-controller="Sprint" asp-action="Index" class="sidebar-item @(currentPath.Contains("/Sprint-List") || currentPath.Contains("/Review-List") || currentPath.Contains("/ReviewStatus-List") || currentPath.Contains("/Retrospective-List") || currentPath.Contains("/RetrospectiveStatus-List") || currentPath.Contains("/Action-List") || currentPath.Contains("/ActionStatus-List") ? "active" : "")">
                <i class="fas fa-folder-open"></i> <span>Processos</span>
            </a>
            <a asp-controller="Assessment" asp-action="Index" class="sidebar-item @(currentPath.Contains("/Assessment-List") || currentPath.Contains("/AssessmentResult-List") || currentPath.Contains("/AssessmentStatus-List") || currentPath.Contains("/Kpi-List") || currentPath.Contains("/KpiRule-List") || currentPath.Contains("/Metric-List") ? "active" : "")">
                <i class="fas fa-pen-ruler"></i> <span>Avaliações</span>
            </a>
            <a asp-controller="AuditLog" asp-action="Index" class="sidebar-item @(currentPath.Contains("/Audit-List") ? "active" : "")">
                <i class="fas fa-message"></i> <span>Auditoria</span>
            </a>
        </div>

        <!-- Main page content -->
        <div class="flex-grow-1" style="min-height: 100vh;">

            <!-- Breadcrumb bar -->
            @if (!currentPath.Equals("/", StringComparison.OrdinalIgnoreCase))
            {
                <div class="breadcrumb-bar">
                    <div class="container-fluid px-4 d-flex align-items-center" style="height: 48px;">
                        <span class="breadcrumb-title">
                            <i class="fa-solid fa-gauge-high me-1"></i> / @ViewData["Section"]
                            @if (ViewData["Title"]?.ToString() != ViewData["Section"]?.ToString())
                            {
                                <text> / </text> @ViewData["Title"]
                            }
                        </span>
                    </div>
                </div>
            }

            else
            {
                <div class="breadcrumb-bar">
                    <div class="container-fluid px-4 d-flex align-items-center" style="height: 48px;">
                        <span class="breadcrumb-title">@ViewData["Title"]</span>
                    </div>
                </div>
            }


            <div class="main-columns">

                @if (currentPath.Contains("/User-List") || currentPath.Contains("/Role-List") || currentPath.Contains("/Module-List") || currentPath.Contains("/Claim-List"))
                {
                    <!-- Submenu Gestão de Utilizadores -->
                    <div class="submenu">
                        <a asp-controller="User" asp-action="Index" class="submenu-item @(currentPath.Contains("/User-List") ? "active" : "")">
                            <i class="fas fa-user"></i> Utilizadores
                        </a>
                        <a asp-controller="Role" asp-action="Index" class="submenu-item @(currentPath.Contains("/Role-List") ? "active" : "")">
                            <i class="fas fa-gears"></i> Perfis
                        </a>
                        <a asp-controller="Module" asp-action="Index" class="submenu-item @(currentPath.Contains("/Module-List") ? "active" : "")">
                            <i class="fas fa-cubes"></i> Módulos
                        </a>
                        <a asp-controller="Claim" asp-action="Index" class="submenu-item @(currentPath.Contains("/Claim-List") ? "active" : "")">
                            <i class="fas fa-handshake"></i> Declarações
                        </a>
                    </div>
                }

                @if (currentPath.Contains("/Activity-List") || currentPath.Contains("/ActivityType-List") || currentPath.Contains("/ActivityStatus-List") || currentPath.Contains("/Project-List") || currentPath.Contains("/ProjectType-List"))
                {
                    <!-- Submenu for Gestão de projetos -->
                    <div class="submenu">
                        <a asp-controller="Project" asp-action="Index" class="submenu-item @(currentPath.Contains("/Project-List") ? "active" : "")">
                            <i class="fas fa-diagram-project"></i> Projetos
                        </a>
                        <a asp-controller="Activity" asp-action="Index" class="submenu-item @(currentPath.Contains("/Activity-List") ? "active" : "")">
                            <i class="fas fa-list-ol"></i> Atividades
                        </a>
                        <a asp-controller="ProjectType" asp-action="Index" class="submenu-item @(currentPath.Contains("/ProjectType-List") ? "active" : "")">
                            <i class="fas fa-ellipsis-vertical"></i> Tipos de Projeto
                        </a>
                        <a asp-controller="ActivityType" asp-action="Index" class="submenu-item @(currentPath.Contains("/ActivityType-List") ? "active" : "")">
                            <i class="fas fa-ellipsis-vertical"></i> Tipos de Atividade
                        </a>
                        <a asp-controller="ActivityStatus" asp-action="Index" class="submenu-item @(currentPath.Contains("/ActivityStatus-List") ? "active" : "")">
                            <i class="fas fa-bars-progress"></i> Status de Atividade
                        </a>
                    </div>
                }

                @if (currentPath.Contains("/Sprint-List") || currentPath.Contains("/Review-List") || currentPath.Contains("/ReviewStatus-List") || currentPath.Contains("/Retrospective-List") || currentPath.Contains("/RetrospectiveStatus-List") || currentPath.Contains("/Action-List") || currentPath.Contains("/ActionStatus-List"))
                {
                    <!-- Submenu for Gestão de Processos -->
                    <div class="submenu">
                        <a asp-controller="Sprint" asp-action="Index" class="submenu-item @(currentPath.Contains("/Sprint-List") ? "active" : "")">
                            <i class="fa-solid fa-person-running"></i> Sprints
                        </a>
                        <a asp-controller="Review" asp-action="Index" class="submenu-item @(currentPath.Contains("/Review-List") ? "active" : "")">
                            <i class="fas fa-list-check"></i> Reviews
                        </a>
                        <a asp-controller="Retrospective" asp-action="Index" class="submenu-item @(currentPath.Contains("/Retrospective-List") ? "active" : "")">
                            <i class="fas fa-clock-rotate-left"></i> Retrospetivas
                        </a>
                        <a asp-controller="Action" asp-action="Index" class="submenu-item @(currentPath.Contains("/Action-List") ? "active" : "")">
                            <i class="fas fa-hammer"></i> Ações
                        </a>
                        <a asp-controller="ReviewStatus" asp-action="Index" class="submenu-item @(currentPath.Contains("/ReviewStatus-List") ? "active" : "")">
                            <i class="fas fa-bars-progress"></i> Status de review
                        </a>
                        <a asp-controller="RetrospectiveStatus" asp-action="Index" class="submenu-item @(currentPath.Contains("/RetrospectiveStatus-List") ? "active" : "")">
                            <i class="fas fa-bars-progress"></i> Status de retrospetiva
                        </a>
                        <a asp-controller="ActionStatus" asp-action="Index" class="submenu-item @(currentPath.Contains("/ActionStatus-List") ? "active" : "")">
                            <i class="fas fa-bars-progress"></i> Status de ação
                        </a>
                    </div>
                }

                @if (currentPath.Contains("/Assessment-List") || currentPath.Contains("/AssessmentResult-List") || currentPath.Contains("/AssessmentStatus-List") || currentPath.Contains("/Kpi-List") || currentPath.Contains("/KpiRule-List") || currentPath.Contains("/Metric-List"))
                {
                    <!-- Submenu for Gestão de Avaliações -->
                    <div class="submenu">
                        <a asp-controller="Assessment" asp-action="Index" class="submenu-item @(currentPath.Contains("/Assessment-List") ? "active" : "")">
                            <i class="fas fa-pen-ruler"></i> Avaliações
                        </a>
                        <a asp-controller="Metric" asp-action="Index" class="submenu-item @(currentPath.Contains("/Metric-List") ? "active" : "")">
                            <i class="fas fa-handshake"></i> Métricas
                        </a>
                        <a asp-controller="Kpi" asp-action="Index" class="submenu-item @(currentPath.Contains("/Kpi-List") ? "active" : "")">
                            <i class="fas fa-scale-unbalanced"></i> KPIs
                        </a>
                        <a asp-controller="AssessmentResult" asp-action="Index" class="submenu-item @(currentPath.Contains("/AssessmentResult-List") ? "active" : "")">
                            <i class="fas fa-square-poll-vertical"></i> Resultados de avaliações
                        </a>
                        <a asp-controller="AssessmentStatus" asp-action="Index" class="submenu-item @(currentPath.Contains("/AssessmentStatus-List") ? "active" : "")">
                            <i class="fas fa-bars-progress"></i> Status de avaliações
                        </a>
                    </div>
                }

                @if (currentPath.Contains("/Audit-List"))
                {
                    <!-- Submenu for Auditoria -->
                    <div class="submenu">
                        <a class="submenu-item @(currentPath.Contains("/Audit-List") ? "active" : "")" asp-controller="AuditLog" asp-action="Index">
                            <i class="fas fa-clipboard-list"></i> Logs de Auditoria
                        </a>
                    </div>
                }

                <div class="main-wrapper">
                    <div class="scrollable-content">
                        <div class="mb-3">
                            @RenderBody()
                        </div>

                        <footer class="footer text-muted border-top">
                            <div class="d-flex justify-content-between px-3 py-2">
                                <span>GrupoJAP - Todos direitos reservados</span>
                                <a asp-controller="Versions" asp-action="Versions">1.0.X</a>
                            </div>
                        </footer>
                    </div>
                </div>

            </div>
        </div>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
