@using ArteDaTerraBrasil.Mvc.ViewModels.Shareds
@model LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = null; // Layout independente, sem _Layout.cshtml
}

<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="utf-8" />
    <title>Login - Sistema</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
    <!-- Font-awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />

    <style>
        body, html {
            height: 100%;
            margin: 0;
        }

        .login-container {
            display: flex;
            height: 100vh;
        }

        .left-panel {
            flex: 1;
            background-color: #343a40;
            color: white;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
        }

        .left-panel img {
            width: 150px;
            margin-bottom: 20px;
        }

        .right-panel {
            flex: 1;
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 10px;
        }

        .login-form {
            width: 100%;
            max-width: 60%;
            border: 1px solid #ccc; /* Borda fina cinza */
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Sombra suave */
            border-radius: 8px; /* Opcional: cantos arredondados para um visual mais moderno */
            padding: 20px; /* Opcional: espaço interno */
            background-color: #fff; /* Opcional: fundo branco */
            align-items: center; /* Centraliza verticalmente */
        }
    </style>
</head>
<body>
    <div class="login-container">
        <!-- Esquerda -->
        <div class="left-panel">
            <img src="~/images/main_logo_02.png" style="width:250px" alt="Logo" />
            <h1 class="mt-3">Arquitetura em Camadas</h1>
            <p>Gestão de Acessos</p>
        </div>

        <!-- Direita -->
        <div class="right-panel">
            <div class="login-form">
                <h2 class="mb-4">Login</h2>
                <form id="loginForm">
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label"></label>
                        <input asp-for="Email" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label asp-for="Password" class="form-label"></label>
                        <input asp-for="Password" class="form-control" />
                    </div>
                    <div class="mb-3 form-check">
                        <input asp-for="RememberMe" class="form-check-input" />
                        <label asp-for="RememberMe" class="form-check-label"></label>
                    </div>
                    <button type="submit" class="btn btn-danger w-100"><i class="fas fa-sign-in-alt"></i> Entrar</button>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <partial name="_ValidationScriptsPartial" />

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script>
        $(document).ready(function () {
            $("#loginForm").submit(function (e) {
                e.preventDefault();

                var formData = {
                    Email: $("#Email").val(),
                    Password: $("#Password").val(),
                    RememberMe: $("#RememberMe").is(":checked")
                };

                $.ajax({
                    url: '@Url.Action("Login", "Account")',
                    type: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify(formData),
                    success: function (res) {
                        if (res.success) {
                            toastr.success(res.message);
                            setTimeout(function () {
                                window.location.href = '/'; // ou outra rota
                            }, 1500);
                        } else {
                            toastr.error(res.message);
                        }
                    },
                    error: function () {
                        toastr.error("Erro ao comunicar com o servidor.");
                    }
                });
            });
        });
    </script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>

</body>
</html>
